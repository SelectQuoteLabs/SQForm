{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "jest"
    ],
    "allowJs": true, // TODO: Change to false once fully migrated to TS
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "./src",
    "./jest-setup.ts",
    "./stories",
  ],
  "exclude": [
    "**/*.test(.ts|.tsx)"
  ]
}
